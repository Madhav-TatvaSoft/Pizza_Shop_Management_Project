@using DAL.ViewModels;
@model List<ItemsViewModel>

@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
         <div class="d-flex mt-2 " data-itemId="@item.ItemId" style=" width: 270px !important;">
            <div 
                style="max-width: fit-content;  border-radius: 0.7rem !important; z-index: 3; ">
                <div class="d-flex justify-content-center align-items-center" style="height: 65px; width: 65px; ">
                    <img src="@item.ItemImage" width="100%" height="100%" style=" border-radius: 0.7rem !important;" class=" bg-white">
                </div>
            </div>
            <div style="z-index:2; height: 65px; min-width: 200px; border-top-right-radius: 0.7rem !important; border-bottom-right-radius: 0.7rem !important;"
                class="bg-white d-flex justify-content-between">
                <div class="ps-2 py-1 d-flex flex-column justify-content-between">
                    <span>@item.ItemName</span>
                    <span class="text-black-50 validate pb-1">â‚¹@item.Rate</span>
                </div>
                <div class="d-flex flex-column justify-content-between">
                    <span
                        style="clip-path: polygon(0% 0%, 100% 100%, 100% 0%); height: 30px; width: 30px; border-top-right-radius: 0.7rem; "
                        class="pb-2 @(item.ItemTypeId == 1 ? "bg-success" : item.ItemTypeId == 2 ? "bg-danger" : "bg-warning")"></span>
                    <span><i class="pb-2 @(item.IsFavourite ? "fa-solid" : "fa-regular") @(item.IsFavourite ? "user-text" : "") fa-heart"
                            data-itemId="@item.ItemId" onclick="FavouriteItem(event,this)"></i></span>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="d-flex justify-content-center w-100">
        <span class="fw-bold text-danger fs-4">No Items Found</span>
    </div>
}

