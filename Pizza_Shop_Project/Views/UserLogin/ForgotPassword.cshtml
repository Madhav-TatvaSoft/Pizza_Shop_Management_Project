@model DAL.ViewModels.ForgotPasswordViewModel;
@{
    ViewData["Title"] = "ForgotPassword Page";
    Layout = "_LoginLayout";
}

<div class="container-fluid  ">
        <div class="login-container row   ">

            <!-- Image Section -->
            <div class="pizza-img-div col-md-6 d-none d-md-block">

                <img src="~/images/dominos_background.jpg" alt="Logo" class="pizza-img-tag img-fluid min-vh-100" />

            </div>


            <!-- Login Section -->
            <div
                class="login-main-div col-md-6 text-center text-md-start min-vh-100 d-flex flex-column align-content-center justify-content-center   ">

                <!-- Logo -->
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <img src="~/images/logos/pizzashop_logo.png" alt="Logo" class="img-fluid"
                        style="width: 50px;" /><span class="logo-name">PIZZASHOP</span>
                </div>

                <div class="welcome-text user-text mb-3"> <span class="fw-semibold fs-2">Forgot Password</span></div>
                <p class="text mb-2 fs-6">
                    Enter your email and we'll send you a link to reset your password
                </p>

                <!-- Login Form-->
                <form method="post" action="SendEmail" class="login-form w-75 mx-auto ">

                    <div class="pass-div mb-4 ">
                        <input asp-for="Email" type="email" class="form-control email-inp"  id="email-inp"
                            placeholder="Email*" value=@ViewBag.Email required />
                    <span asp-validation-for="Email" class="text-danger ms-4"></span>
                    </div>

                    <!-- Remember me and frgt pass section -->

                    <div class=" d-grid">
                        <button class="login-btn btn solid-btn" 
                            type="submit">Send</button>
                    </div>

                    <div class="mt-3"><a asp-action="VerifyUserLogin" asp-controller="UserLogin" class="text-decoration-none hollow-btn ms-3 frgt-pass ">Back to
                            Login</a></div>

                </form>

            </div>
        </div>
    </div>