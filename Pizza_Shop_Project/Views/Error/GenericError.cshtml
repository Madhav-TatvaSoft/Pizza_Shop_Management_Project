    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Error";
}

<div class="container-fluid vw-100 vh-100 d-flex align-items-center" style="background-color: rgb(207 233 243);">
    <div class="row d-flex align-items-center col-12">
        <div class="col-12 d-flex justify-content-center">
            <img src="~/images/logos/pizzashop_logo.png" width="70px" alt="">
            <span class="ms-2 fs-1 fw-bold user-text">PIZZASHOP</span>
        </div>
        <div class="col-12 user-text d-flex justify-content-center" style="font-size: 200px;">
            Error
        </div>
        <div class="col-12 d-flex justify-content-center" style="font-size: 15px;">
