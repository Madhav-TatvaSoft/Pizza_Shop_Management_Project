@using DAL.ViewModels;
@model List<OrderAppTableVM>;

@if (Model.Count() == 0 || Model == null)
{
    <div class="text-center text-secondary fw-bold">No Tables Found</div>
}
else
{
    <div class="d-flex flex-column gap-2 px-3">
        <div class="d-flex flex-wrap justify-content-start gap-3 " id="TablesToDisplayDiv">
            @foreach (var table in Model)
            {
                var isStatus = string.IsNullOrEmpty(table.Status);
                var status = string.IsNullOrEmpty(table.Status) ? "" : table.Status.ToLower();
                var backGroundColor = isStatus ? "" : $"bg-{status}";
                var borderColor = isStatus ? "" : $"border-{status}";
                var textColor = isStatus ? "" : $"text-{status}";

                <div class="table-card card border border-1 rounded-2 @borderColor" style="width: 270px;"
                    data-status=@table.Status.ToLower() data-id=@table.TableId>
                    <div class="card-body rounded-1 d-flex flex-column @backGroundColor">
                        <div class="fs-5 fw-semibold @textColor">@table.TableName</div>
                        <div class="d-flex justify-content-between align-items-center mx-1">
                            <div class="d-flex flex-column align-items-center">
                                <div><i class="bi bi-people"></i></div>
                                <div>@table.Capacity</div>
                            </div>
                            <div class="d-flex align-items-center flex-column">
                                <div><i class="bi bi-stopwatch"></i></div>
                                <div>@table.OrderAmount</div>
                                <div>@table.TableTime</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn bg-button text-white assign-tables-button" disabled data-bs-toggle="offcanvas"
                data-bs-target="#assign-table-waiting-list-@Model[0].SectionId"
                aria-controls="assign-table-waiting-list">Assign</button>
        </div>

    </div>
}
